    <script>
        // Define showPopup function first so it's available to all event listeners
        function showPopup(): void {
            const container = document.getElementById("popup-container");
            const quoteDisplay = document.getElementById("quote-display");

            if (!container || !quoteDisplay) {
                console.error("Required elements not found");
                return;
            }

            const motivationQuotes = [
                "Padhle fr, ps you're doing well",
                "Success is the sum of small efforts repeated day in and day out.",
                "The expert in anything was once a beginner.",
                "Your future is created by what you do today, not tomorrow.",
                "The only way to do great work is to love what you do."
            ];

            const randomQuote = motivationQuotes[Math.floor(Math.random() * motivationQuotes.length)];
            quoteDisplay.textContent = randomQuote;

            container.classList.add("fade-in");
            container.style.display = "flex";

            setTimeout(() => {
                container.classList.remove("fade-in");
                container.classList.add("fade-out");

                setTimeout(() => {
                    container.classList.remove("fade-out");
                    container.style.display = "none";
                }, 1000);
            }, 4000);
        }

        document.addEventListener('DOMContentLoaded', () => {
            // Theme handling with TypeScript safety
            const handleThemeChange = (element: HTMLElement): void => {
                const theme = element.getAttribute('data-set-theme');
                if (theme) {
                    document.documentElement.setAttribute('data-theme', theme);
                    localStorage.setItem('selectedTheme', theme);
                }
            };

            // Load saved theme
            try {
                const savedTheme = localStorage.getItem('selectedTheme') || 'halloween';
                document.documentElement.setAttribute('data-theme', savedTheme);
            } catch (error) {
                console.error('Failed to load theme:', error);
                document.documentElement.setAttribute('data-theme', 'halloween');
            }

            // Theme button click handlers
            document.querySelectorAll<HTMLElement>('[data-set-theme]').forEach(button => {
                button.addEventListener('click', (e) => {
                    const target = e.currentTarget;
                    if (target instanceof HTMLElement) {
                        handleThemeChange(target);
                    }
                });
            });

            // Mobile menu toggle with improved handling
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenuClose = document.getElementById('mobile-menu-close');
            const mobileMenu = document.getElementById('mobile-menu');

            if (mobileMenuButton && mobileMenu && mobileMenuClose) {
                // Open menu
                mobileMenuButton.addEventListener('click', (e) => {
                    e.stopPropagation();
                    mobileMenu.classList.remove('hidden');
                    document.body.style.overflow = 'hidden';
                });

                // Close menu
                mobileMenuClose.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden');
                    document.body.style.overflow = '';
                });

                // Close on escape key
                document.addEventListener('keydown', (e) => {
                    if (e.key === 'Escape' && !mobileMenu.classList.contains('hidden')) {
                        mobileMenu.classList.add('hidden');
                        document.body.style.overflow = '';
                    }
                });
            }

            // Setup popup buttons
            const popupButton = document.getElementById("popup-button");
            const mobilePopupButton = document.getElementById('mobile-popup-button');

            if (popupButton) {
                popupButton.addEventListener("click", showPopup);
            }
            if (mobilePopupButton) {
                mobilePopupButton.addEventListener("click", showPopup);
            }
        });
    </script>
