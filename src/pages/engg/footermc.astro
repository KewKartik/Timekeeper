<script>
  // Set the original title of the webpage
  var originalTitle = document.title;

  // Add an event listener for changes in page visibility
  document.addEventListener("visibilitychange", function () {
    // If the page is hidden, append "(Away)" to the title
    if (document.hidden) {
      document.title = "PADHLE!!!!!";
    }
    // If the page is visible, remove "(Away)" from the title
    else {
      document.title = originalTitle;
    }
  });
</script>
